@model IEnumerable<Splendor.Models.Aristocrat>

@{
    ViewBag.Title = "Index";
}

<h2>Aristocrats</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Points)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequireGreen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequireWhite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequireBlue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequireBlack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequireRed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequireGreen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequireWhite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequireBlue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequireBlack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequireRed)
            </td>
            <td>
                <img src="@Url.Content(item.ImagePath)" alt="@item.ImagePath" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn" }) <br />
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn" }) <br />
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn" })
            </td>
        </tr>
    }

</table>
