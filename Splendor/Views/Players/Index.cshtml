@model IEnumerable<Splendor.Models.Player>

@{
    ViewBag.Title = "Index";
}

<h2>Players</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn" })
                @if (User.Identity.Name.Equals(Splendor.UserRoles.UserAdmin))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn" })
                }
            </td>
        </tr>
    }
</table>
